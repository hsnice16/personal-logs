{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/component/*": ["src/component/*"],
      "@/ui/*": ["src/ui/*"],
      "@/constant/*": ["src/constant/*"],
      "@/data/*": ["src/data/*"],
      "@/book/*": ["public/book/*"],
      "@/icon/*": ["public/icon/*"],
      "@/movie/*": ["public/movie/*"],
      "@/anime/*": ["public/anime/*"],
      "@/web-show/*": ["public/web-show/*"],
      "@/writing/*": ["public/writing/*"]
    }
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
